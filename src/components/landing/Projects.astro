---
const music = [
  { title: "Release - Performance 01", description: "Short description.", url: "#" },
  { title: "Release - Performance 02", description: "Short description.", url: "#" },
];

const tech = [
  { title: "Tool - Prototype 01", description: "Short description.", url: "#" },
  { title: "Tool - Prototype 02", description: "Short description.", url: "#" },
];

function calculateAosDuration(index: number) {
  return 1500 + index * 250;
}
---

<section class="bg-primary">
  <div class="px-8 2xl:max-w-7xl mx-auto py-32">
    <div class="space-y-2">
      <div class="h-0.5 bg-secondary" data-aos="fade-up" data-aos-duration="1000"></div>
      <h3 class="text-secondary text-base font-medium" data-aos="fade-up" data-aos-duration="1500">
        <span>Selected</span> <span class="font-bold">work</span>
      </h3>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 mt-16 text-secondary">
      <div id="music">
        <!-- removed "Portfolio" -->
        <h2 class="text-4xl md:text-5xl font-semibold">Music</h2>
        <p class="mt-4 text-lg opacity-75">
          Releases, performances, collaborations.
        </p>

        <div class="mt-10 space-y-8">
          {music.map((p, i) => (
            <a
              href={p.url}
              class="block group"
              data-aos="fade-up"
              data-aos-duration={calculateAosDuration(i)}
            >
              <h3 class="text-2xl md:text-3xl font-medium group-hover:underline underline-offset-4">
                {p.title}
              </h3>
              <p class="mt-2 opacity-75">{p.description}</p>
            </a>
          ))}
        </div>
      </div>

      <div id="tech">
        <!-- removed "Portfolio" -->
        <h2 class="text-4xl md:text-5xl font-semibold">Tech</h2>
        <p class="mt-4 text-lg opacity-75">
          Tools, prototypes, research and development.
        </p>

        <div class="mt-10 space-y-8">
          {tech.map((p, i) => (
            <a
              href={p.url}
              class="block group"
              data-aos="fade-up"
              data-aos-duration={calculateAosDuration(i)}
            >
              <h3 class="text-2xl md:text-3xl font-medium group-hover:underline underline-offset-4">
                {p.title}
              </h3>
              <p class="mt-2 opacity-75">{p.description}</p>
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
