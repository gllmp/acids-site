---
import NeuralRave from "../NeuralRave.astro";
---

<section class="bg-primary acids-hero">
  <div class="px-6 sm:px-8 pt-10" data-aos="fade-up" data-aos-duration="2000">
    <div class="text-secondary">
      <div class="flex flex-wrap items-baseline justify-between gap-6">
        <p class="uppercase tracking-[0.3em] text-xs opacity-70">
          ACIDS Team - Paris x Tokyo
        </p>

        <div class="flex flex-wrap gap-6 underline underline-offset-4 text-sm opacity-80">
          <a href="#music">Music</a>
          <a href="#tech">Tech</a>
          <a href="#contact">Contact</a>
        </div>
      </div>

      <div class="mt-6 flex items-end">
        <h1 class="acids-title">
          ACIDS
        </h1>

        <div class="flex-1 flex justify-start">
          <div class="hidden sm:block self-end" style="position: relative; top: 50px;">
            <NeuralRave />
          </div>
        </div>
      </div>

      <div class="mt-6 max-w-3xl">
        <p class="text-lg md:text-xl opacity-80">
          Music, tech, and artistic R&amp;D.
        </p>
      </div>
    </div>
  </div>

<div class="mt-10 acids-stripes">
  <div class="acids-stripes-inner">
    <div
      class="acids-stripe s1"
      data-aos="fade-up"
      data-aos-duration="700"
      data-aos-delay="0"
    ></div>

    <div
      class="acids-stripe s2"
      data-aos="fade-up"
      data-aos-duration="800"
      data-aos-delay="80"
    ></div>

    <div
      class="acids-stripe s3"
      data-aos="fade-up"
      data-aos-duration="900"
      data-aos-delay="160"
    ></div>

    <div
      class="acids-stripe s4"
      data-aos="fade-up"
      data-aos-duration="1000"
      data-aos-delay="240"
    ></div>

    <div
      class="acids-stripe s5"
      data-aos="fade-up"
      data-aos-duration="1100"
      data-aos-delay="320"
    ></div>
  </div>
</div>
</section>
